<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" prefHeight="446.0" prefWidth="395.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.fuel.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Distance (km)" fx:id="distance" />
        <TextField fx:id="distanceInput"/>
        <Label text="Fuel Used (liters)" fx:id="fuel"/>
        <TextField fx:id="fuelInput"/>
        <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="142.0" fx:id="calculate" text="Calculate" onAction="#calculatePrice"/>
        <Button mnemonicParsing="false" text="EN" onAction="#setEN"/>
        <Button mnemonicParsing="false" text="FR" onAction="#setFR"/>
        <Button mnemonicParsing="false" text="JP" onAction="#setJP"/>
        <Button mnemonicParsing="false" text="IR" onAction="#setIR"/>
        <Label fx:id="response"/>
    </children>
</VBox>
